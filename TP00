CREATE TABLE Continent
(
nom VARCHAR(50),
superficie NUMBER,
CONSTRAINT	pk_Continent PRIMARY KEY (nom));
CHECK
---------------------------------
CREATE TABLE Pays
(
nom VARCHAR(50),
capital VARCHAR (30),
superficie NUMBER,
population NUMBER,
iso3 CHAR(3),
iso2 CHAR (2),
nomc VARCHAR (50),
CONSTRAINT	pk_Pays PRIMARY KEY (nom),
CONSTRAINT	fk_Pays FOREIGN KEY (nomc) References Continent(nom),
CONSTRAINT unique_constraint_Pays_iso3 UNIQUE(iso3),
CONSTRAINT unique_constraint_Pays_iso2 UNIQUE(iso2));
CHECK super popu

---------------------------------

Create table Frontiere
( nomp VARCHAR(50),
  nomf VARCHAR(50),
  longeur NUMBER,
  CONSTRAINT pk_frontiere_nom PRIMARY KEY (nomp,nomf),  
  CONSTRAINT fk_frontiere_nomp FOREIGN KEY (nomp) References Pays(nom),
  CONSTRAINT fk_frontiere_nomf FOREIGN KEY (nomf) References Pays(nom)
#CHECK longueur
);


---------------------------------
CREATE TABLE Montagne (
 nm NUMBER,
 nom VARCHAR(50),
 altitude NUMBER,
 chaine VARCHAR(50),
   CONSTRAINT pk_montagne_nom PRIMARY KEY (nm)
   #CHECK altitude
);

-----------------------
CREATE TABLE Fleuve
(
nf NUMBER,
longueur NUMBER,
nom VARCHAR(50),
embouchure VARCHAR(50),
CONSTRAINT	pk_Fleuve_nf PRIMARY KEY (nf));
---CHECK longueur

---------------

Create table Traverser
( nf NUMBER,
  nomp VARCHAR(50),
  CONSTRAINT pk_traverser PRIMARY KEY (nf, nomp),  
  CONSTRAINT fk_traverser_nomp FOREIGN KEY (nomp) References Pays(nom),
  CONSTRAINT fk_traverser_nf FOREIGN KEY (nf) References Fleuve(nf)
);
-------------------------
Create table Localiser
( nm NUMBER,
  nomp VARCHAR(50),
  CONSTRAINT pk_localiser PRIMARY KEY (nm, nomp),  
  CONSTRAINT fk_localiser_nm FOREIGN KEY (nm) References Montagne(nm),
  CONSTRAINT fk_localiser_nomp FOREIGN KEY (nomp) References Pays(nom)
);