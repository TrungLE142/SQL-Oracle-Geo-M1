2) Modification sur table pays

Alter pour cle primaire
ALTER TABLE PAYS_1
ADD CONSTRAINT PK_PAYS_1_NOM PRIMARY KEY (nom);

ALTER TABLE PAYS_2
ADD CONSTRAINT PK_PAYS_2_NOM PRIMARY KEY (nom);


Trigger pour cle etrangere Nomc
create or replace Trigger t_iup_pays_2_nomc
Before Insert or UPDATE of nomc
ON pays_2
For each row
DECLARE
n number;
m number;
p number;

BEGIN
SELECT count (*) into p
from Continent_1@lien_etupre
where nom = :NEW.nomc;

SELECT count (*) into n
from Continent_2@lien_etusec
where nom = :NEW.nomc;

SELECT count (*) into m
from Continent_3@lien_etuter
where nom = :NEW.nomc;

    if (n = 0 AND m=0 AND p=0 )then
        RAISE_APPLICATION_ERROR (-20001,'Error: continent inconnu');
    END IF;

END;